{
  "manifest_version": 3,
  "name": "Spotify Highlight",
  "version": "1.0",
  "description": "Summarize highlighted text with GPT",
  "icons": {
    "16": "images/magic16.png",
    "32": "images/magic32.png",
    "48": "images/magic48.png",
    "128": "images/magic128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {}
}